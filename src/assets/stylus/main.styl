body
  font-size: 15px
  @media $media_mobile
    font-size 12px
.container
  @media $media_mobile
    max-width 100vw
    margin 0
.main-page
  .star
    svg
      @media $media_mobile
        width: 50px
  &__lang
    span
      @media $media_mobile
        width: 70px
  .hero-header
    @media $media_mobile
      margin-top 5px
      padding-left 5px
      padding-right 5px
  .hero-body
    @media $media_mobile
      padding: 1rem 0.5rem;
  .hero-foot
    .arrow-down
      svg
        @media $media_mobile
          width: 40px
  .art-title
    margin-top: 1.5rem
    margin-bottom 0.5rem
  .gallery-title
  .columns.gallery
    .column:nth-child(1)
      padding-right 30px
    .column:nth-child(2)
      padding-left 30px
  .arrow-down
    margin-bottom 15px
    cursor: pointer
  &__body
    .level
      margin-bottom 4rem
      @media $media_mobile
        margin-bottom 2.5rem
    .nav-item
      font-size: 20px
      cursor: pointer
      justify-content: center
      @media $media_mobile
        font-size 15px;
        padding 3px 6px
  .gallery-block
    margin-top 40px
    padding-bottom 1.5rem
    .title
      font-size: 2rem
    .subtitle
      font-size 1rem
    .le_slider
      width: 100% !important
      @media $media_mobile
        height: 160px !important;
.main-title
  font-size: 3rem
  font-family "Open Sans"
  font-weight: 300
  @media $media_mobile
    font-size: 2rem
.star-image
  stroke-dasharray: 1000
  stroke-dashoffset: 1000
  animation: dash 15s linear forwards;
