.touchevents
  .gallery-block
    .link_with_description
      .overlay
        position absolute
        opacity 0;
        background-color: transparent
        margin-top: 10px;
        flex-wrap: wrap
        .title
          font-size 1rem
        & > *
          color: white
          margin-right 5px
          flex-shrink 0
          &:before
            content: '  '
        &:focus
          opacity: 1;
        &:active
          opacity: 1;
        &:hover
          opacity: 1;
  .gallery-page
    .link_with_description
      .overlay
        opacity 1;
        background-color: transparent
        flex-direction: row;
        position static
        margin-top: 10px;
        flex-wrap: wrap
        .title
          font-size 1rem
        & > *
          color: black
          margin-right 5px
          flex-shrink 0
          &:before
            content: '  '
        &:hover
          opacity: 0;
  .last-works__body
    .link_with_description
      .overlay
        & > *
          text-shadow: none
@keyframes dash {
  to {
    stroke-dashoffset: 0;
  }
}

