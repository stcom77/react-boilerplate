.link_with_description
  position: relative
  .overlay
    display: flex
    flex-direction column
    align-items: center;
    justify-content: center;
    height 100%
    width 100%
    position absolute
    top: 0
    left: 0
    will-change opacity
    transition opacity 1s ease-out
    background-color: white;
    opacity: 0;
    text-align center
    .title
      font-size 2rem
    p
      margin-bottom 1rem
    span
      font-size: 50px;
      color: black;
  .hovered
    opacity 0.7 !important;
