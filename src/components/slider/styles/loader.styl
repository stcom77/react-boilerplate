  //background: #6e6e6e;

.loader
  position: relative;
  top: 50%;
  -webkit-transform: translate3d(0, -50%, 0);
  -ms-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);

.loader.bar
  color: #6e6e6e;
  text-indent: -9999em;
  margin: 30px auto;
  box-sizing: border-box;
  font-size: 11px;


.loader.bar
  &, &:before, &:after
    -webkit-animation: bar 1s -0.16s infinite ease-in-out;
    animation: bar 1s -0.16s infinite ease-in-out;
    width: 1em;
    height: 4em;
  &:before, &:after
    position: absolute;
    top: 0;
    content: '';
  &:before
    left: -1.5em;
    animation-delay: 0s;
  &:after
    left: 1.5em;
    animation-delay: -0.32s;

@-webkit-keyframes bar {
  0%,
  80%,
  100% {
    box-shadow: 0 0;
    height: 4em;
  }
  40% {
    box-shadow: 0 -2em;
    height: 5em;
  }
}
@keyframes bar {
  0%,
  80%,
  100% {
    box-shadow: 0 0;
    height: 4em;
  }
  40% {
    box-shadow: 0 -2em;
    height: 5em;
  }
}

.loader.circle1
  &, &:before, &:after
    border-radius: 50%;

.loader.circle1
  color: #6e6e6e;
  font-size: 11px;
  text-indent: -99999em;
  margin: 55px auto;
  position: relative;
  width: 10em;
  height: 10em;
  box-shadow: inset 0 0 0 1em;
  -webkit-transform: translateZ(0);
  -ms-transform: translateZ(0);
  transform: translateZ(0);

.loader.circle1
  &:before, &:after
    position: absolute;
    content: '';
    background-color #fafafa

.loader.circle1
  &:before
    width: 5.2em;
    height: 10.2em;
    border-radius: 10.2em 0 0 10.2em;
    top: -0.1em;
    left: -0.1em;
    -webkit-transform-origin: 5.2em 5.1em;
    transform-origin: 5.2em 5.1em;
    -webkit-animation: circle1 2s infinite ease 1.5s;
    animation: circle1 2s infinite ease 1.5s;
  &:after
    width: 5.2em;
    height: 10.2em;
    border-radius: 0 10.2em 10.2em 0;
    top: -0.1em;
    left: 5.1em;
    -webkit-transform-origin: 0 5.1em;
    transform-origin: 0 5.1em;
    -webkit-animation: circle1 2s infinite ease;
    animation: circle1 2s infinite ease;

@-webkit-keyframes circle1
  0%
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  100%
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);

@keyframes circle1
  0%
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  100%
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);

