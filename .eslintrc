{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "lodash",
    "you-dont-need-lodash-underscore",
    "prettier"
  ],
  "extends": "plugin:react/recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-cond-assign": ["error", "always"],
    "lodash/callback-binding": 2,
    "lodash/collection-method-value": 2,
    "lodash/collection-return": 2,
    "lodash/no-double-unwrap": 2,
    "lodash/no-extra-args": 2,
    "lodash/prefer-compact": 2,
    "lodash/prefer-filter": 2,
    "lodash/prefer-map": 2,
    "lodash/unwrap": 2,
    "no-lonely-if": 2,
    "no-multiple-empty-lines": 2,
    "prefer-const": 2,
    "react/sort-prop-types": 2,
    "no-debugger": 2,
    "react/no-unknown-property": [2, {"ignore": ["class", "for"]}],
    "no-unused-vars": ["error", { "vars": "local", "args": "after-used", "ignoreRestSiblings": false }]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    },
    "import/ignore": [
      "node_modules"
    ],
    "propWrapperFunctions": [ "forbidExtraProps" ] // The names of any functions used to wrap the propTypes object, such as `forbidExtraProps`. If this isn't set, any propTypes wrapped in a function will be skipped.
  }
}
